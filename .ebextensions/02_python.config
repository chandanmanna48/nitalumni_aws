
container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python myalumini/manage.py migrate --noinput"
    leader_only: true

  02_createsu:
  command: "source /opt/python/run/venv/bin/activate && python iotd/manage.py createsu"
  leader_only: true

  03_collectstatic:
  command: "source /opt/python/run/venv/bin/activate && python iotd/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "myalumini.settings"
    "PYTHONPATH": "./usr/bin"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: myalumini/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"


